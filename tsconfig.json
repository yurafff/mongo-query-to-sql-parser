{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "types": ["mocha", "node"],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": ["es7"]
  },
  "include": ["lib/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
